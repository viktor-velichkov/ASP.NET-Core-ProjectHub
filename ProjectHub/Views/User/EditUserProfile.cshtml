@model UserEditProfileViewModel

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
    .crop {
        width: 200px;
        height: 150px;
        overflow: hidden;
    }

        .crop img {
            width: 400px;
            height: 300px;
            margin: -75px 0 0 -100px;
        }
</style>

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container emp-profile">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    @{
                        if (Model.User.Image.Length == 0)
                        {
                            <img src="data:image/png;base64," class="img-thumbnail" alt="" />
                        }
                        else
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.User.Image)" class="img-thumbnail" alt="" />
                        }
                    }
                </div>
                @if (Model.IsLoggedUser)
                {
                    <div class="row" style="padding-left:15px; padding-right:15px;">
                        <div>
                            <button class="btn btn-primary" id="files" onclick="document.getElementById('file').click(); return false;" style="margin-bottom: 15px; margin-top: 15px;">Change Photo</button>
                            <input type="file" asp-for="User.ImageUpload" id="file" accept="image/*" style="visibility: hidden; height: 10%; width: 10%" />
                        </div>
                    </div>
                }
                <div class="row" style="padding-left: 15px">
                    <div class="left">
                        <div class="profile-work">
                            <p>SOCIAL LINKS</p>
                            <div class="form-group" style="margin-bottom:0">
                                <label asp-for="User.FacebookPage" title="Facebook:"></label>
                                <input asp-for="User.FacebookPage" class="form-control" placeholder="https://...." />
                                <span asp-validation-for="User.FacebookPage" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="margin-bottom:0">
                                <label asp-for="User.LinkedinPage" title="Facebook:"></label>
                                <input asp-for="User.LinkedinPage" class="form-control" placeholder="https://...." />
                                <span asp-validation-for="User.LinkedinPage" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="margin-bottom:0">
                                <label asp-for="User.SkypeProfile" title="Facebook:"></label>
                                <input asp-for="User.SkypeProfile" class="form-control" placeholder="https://...." />
                                <span asp-validation-for="User.SkypeProfile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="profile-head">
                    <input type="hidden" name="User.Id" value="@Model.User.Id" />
                    <input type="hidden" name="User.UserKindName" value="@Model.User.UserKindName" />

                    <div class="form-group" style="margin-bottom:0; margin-top:5px;">
                        <label asp-for="User.FirstName"></label>
                        <input asp-for="User.FirstName" class="form-control" placeholder="@Model.User.FirstName" />
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0; margin-top: 5px">
                        <label asp-for="User.LastName"></label>
                        <input asp-for="User.LastName" class="form-control" placeholder="@Model.User.LastName" />
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0; margin-top: 5px">
                        <label asp-for="User.Email"></label>
                        <input asp-for="User.Email" class="form-control" placeholder="@Model.User.Email" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0; margin-top: 5px">
                        <label asp-for="User.PhoneNumber" title="Facebook:"></label>
                        @{
                            var phonePlaceholder = Model.User.PhoneNumber != null ? Model.User.PhoneNumber : "+359...";

                            <input asp-for="User.PhoneNumber" class="form-control" placeholder="@phonePlaceholder" />
                            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                        }
                    </div>
                    <div class="form-group" style="margin-bottom: 0; margin-top: 5px">
                        <label asp-for="User.WebSite"></label>
                        @{
                            var sitePlaceholder = Model.User.WebSite != null ? Model.User.WebSite : "https://...";

                            <input asp-for="User.WebSite" class="form-control" placeholder="@sitePlaceholder" />
                            <span asp-validation-for="User.WebSite" class="text-danger"></span>
                        }
                    </div>
                    <div class="form-group" style="margin-bottom: 0; margin-top: 5px">
                        <label asp-for="User.Description"></label>
                        @{
                            var descriptionPlaceholder = Model.User.Description != null ? Model.User.Description : "I am...";
                            <textarea asp-for="User.Description" class="form-control" id="desription" rows="4" placeholder="@descriptionPlaceholder"></textarea>
                            <span asp-validation-for="User.Description" class="text-danger"></span>
                        }
                    </div>
                    <button formmethod="post" type="submit" class="btn btn-primary float-right" style="margin-top: 10px; align-self:end">Apply</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/_ValidationScriptsPartial.cshtml" />
}
