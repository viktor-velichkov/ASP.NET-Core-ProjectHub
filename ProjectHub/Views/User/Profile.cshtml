@model Tuple<UserProfileViewModel, int>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@{
    ViewData["Title"] = "Profile";
}

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    @{
                        if (Model.Item1.User.Image.Length == 0)
                        {
                            <img src="data:image/jpeg;base64," class="img-thumbnail" alt="" />
                        }
                        else
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Item1.User.Image)" class="js-profile-picture img-thumbnail" alt="" />
                        }
                    }
                </div>
                @{
                    if (Model.Item1.IsLoggedUser)
                    {
                        <div class="left">
                            @*<input type="file" class="btn btn-primary" value="Change Photo" style="margin-bottom: 15px; margin-top: 15px;" />*@
                            <input type="hidden" name="userId" value="@Model.Item1.User.Id" />
                            <input type="hidden" name="userKind" value="@Model.Item1.User.UserKindName" />
                            <input asp-controller="User" asp-action="EditUserProfile" type="submit" formmethod="get" class="btn btn-primary" value="Edit Profile" style="margin-bottom: 10px; margin-top: 10px;" />
                        </div>
                    }
                }
                <div class="row" style="padding-left: 15px">
                    <div class="left">
                        <div class="profile-work">
                            <p>SOCIAL LINKS</p>
                            <ul class="social-links list-inline">
                                @{
                                    if (Model.Item1.User.FacebookPage != null)
                                    {
                                        <li class="list-inline-item"><a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="@Model.Item1.User.FacebookPage" data-original-title="Facebook"><i class="fa fa-facebook fa-2x"></i></a></li>
                                    }
                                    else
                                    {
                                        <li class="list-inline-item"><div data-placement="top" class="tooltips"><i style="color:gray" class="fa fa-facebook fa-2x"></i></div></li>
                                    }
                                    if (Model.Item1.User.LinkedinPage != null)
                                    {
                                        <li class="list-inline-item"><a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="@Model.Item1.User.LinkedinPage" data-original-title="LinkedIn"><i class="fa fa-linkedin fa-2x" aria-></i></a></li>
                                    }
                                    else
                                    {
                                        <li class="list-inline-item"><div data-placement="top" class="tooltips"><i style="color:gray" class="fa fa-linkedin fa-2x"></i></div></li>
                                    }
                                    if (Model.Item1.User.SkypeProfile != null)
                                    {
                                        <li class="list-inline-item"><a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="@Model.Item1.User.SkypeProfile" data-original-title="Skype"><i class="fa fa-skype fa-2x"></i></a></li>
                                    }
                                    else
                                    {
                                        <li class="list-inline-item"><div data-placement="top" class="tooltips"><i style="color:gray" class="fa fa-skype fa-2x"></i></div></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-head">
                    <h5>
                        @Model.Item1.User.FullName
                    </h5>
                    <h6>
                        @Model.Item1.User.UserKindName
                        @if (Model.Item1.Discipline != null)
                        {
                            @Model.Item1.Discipline.Name
                        }
                    </h6>
                    <p class="proile-rating" style="margin-bottom:10px">
                        Email :
                        <span>
                            @if (Model.Item1.User.Email != null)
                            {
                                @Model.Item1.User.Email
                            }
                        </span>
                    </p>
                    <p class="proile-rating" style="margin-bottom:10px">
                        Phone :
                        <span>
                            @{
                                if (Model.Item1.User.PhoneNumber != null)
                                {
                                    @Model.Item1.User.PhoneNumber
                                }
                                else
                                {
                                    @:Not added yet
                                }
                            }
                        </span>
                    </p>
