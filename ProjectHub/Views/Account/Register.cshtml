@model UserRegisterFormModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserKindId"></label>
                <select asp-for="UserKindId" class="form-control js-user-kind">
                    @foreach (var userType in Model.UserKinds)
                    {
                        <option value="@userType.Id">@userType.Name</option>
                    }
                </select>
                <span asp-validation-for="UserKindId" class="text-danger"></span>
            </div>
            <div class="form-group js-designer-discipline" style="display:none">
                <label asp-for="DisciplineId"></label>
                <select asp-for="DisciplineId" class="form-control">
                    @foreach (var discipline in Model.Disciplines)
                    {
                        <option value="@discipline.Id">@discipline.Name</option>
                    }
                </select>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <button formmethod="post" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-user-kind').change(function () {

                var selection = $('.js-user-kind').val();
                console.log(selection);
                if (selection=='3') {
                    $('.js-designer-discipline').show();
                }
                else {
                    $('.js-designer-discipline').hide();
                }
            });
        });
    </script>


    <partial name="~/Views/_ValidationScriptsPartial.cshtml" />
}




